---
interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md text-center hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 animate-fadeIn">
  <div class="text-4xl mb-4 animate-bounce-subtle">{icon}</div>
  <h3 class="font-montserrat font-semibold text-secondary">{name}</h3>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bounceSoft {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .animate-bounce-subtle {
    animation: bounceSoft 2s infinite ease-in-out;
  }

  /* Stagger the entrance animation for each card */
  div:nth-child(1) { animation-delay: 0.1s; }
  div:nth-child(2) { animation-delay: 0.2s; }
  div:nth-child(3) { animation-delay: 0.3s; }
  div:nth-child(4) { animation-delay: 0.4s; }
  div:nth-child(5) { animation-delay: 0.5s; }
  div:nth-child(6) { animation-delay: 0.6s; }
</style>