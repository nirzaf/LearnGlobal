---

<Layout title="Home">
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative min-h-[85vh] flex items-center justify-center bg-gradient-to-b from-gray-50 via-white to-gray-50">
      <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center space-y-8">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-montserrat font-bold mb-6">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary via-orange-500 to-primary animate-gradient-x">
              Expert Tutoring
            </span>
            <br />
            <span class="text-secondary">
              for Global Success
            </span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-700 max-w-2xl mx-auto leading-relaxed">
            Connect with qualified tutors worldwide and achieve your academic goals
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-6 mt-12">
            <a
              href="/contact"
              class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-primary rounded-xl overflow-hidden shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl"
            >
              <span class="relative z-10">Book Free Trial</span>
              <div class="absolute inset-0 bg-gradient-to-r from-orange-600 to-primary opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute inset-0 w-1/4 bg-white/20 skew-x-[45deg] group-hover:animate-shine"></div>
            </a>
            <a
              href="/exam-boards"
              class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-primary border-2 border-primary rounded-xl overflow-hidden shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl hover:bg-primary/5"
            >
              <span class="relative z-10">View Exam Boards</span>
              <div class="absolute inset-0 w-1/4 bg-primary/10 skew-x-[45deg] group-hover:animate-shine"></div>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Study Levels Section -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-12">
          Choose Your Level
        </h2>
        <LevelTabs client:load />
      </div>
    </section>

    <!-- Subjects Section -->
    <section class="py-12 bg-gradient-to-b from-white to-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-12">
          Our Subjects
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
          {subjects.map(subject => <SubjectCard client:load {...subject} />)}
        </div>
      </div>
    </section>

    <!-- Why Us Section -->
    <section class="py-12 bg-gradient-to-b from-gray-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-12">
          Why Choose Us?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {whyUsFeatures.map(feature => <WhyUsCard {...feature} />)}
        </div>
      </div>
    </section>

    <!-- Pay As You Go Section -->
    <PayAsYouGo />

    <!-- Exam Boards Carousel -->
    <ExamBoardsCarousel />

    <!-- Testimonials Section -->
    <section class="py-12 bg-gradient-to-b from-white to-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-12">
          Student Success Stories
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          {testimonials.map(testimonial => <TestimonialCard {...testimonial} />)}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes shine {
    from {
      transform: translateX(-100%) skew(-45deg);
    }
    to {
      transform: translateX(200%) skew(-45deg);
    }
  }

  .animate-shine {
    animation: shine 2s infinite;
  }

  @keyframes gradient-x {
    0%, 100% {
      background-size: 200% 100%;
      background-position: left center;
    }
    50% {
      background-size: 200% 100%;
      background-position: right center;
    }
  }

  .animate-gradient-x {
    animation: gradient-x 8s ease infinite;
  }

  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, #00000008 1px, transparent 1px),
      linear-gradient(to bottom, #00000008 1px, transparent 1px);
    background-size: 24px 24px;
  }
</style>